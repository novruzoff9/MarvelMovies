<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
        $(function () {
            $(".select").click(function () {
                if ($(this).hasClass("far")) {
                    $(this).addClass("fas");
                    $(this).removeClass("far");
                }
                else {
                    $(this).addClass("far");
                    $(this).removeClass("fas");
                }
            });
        });
</script>
