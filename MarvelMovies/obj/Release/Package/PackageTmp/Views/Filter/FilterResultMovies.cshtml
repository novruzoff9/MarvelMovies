@using EntityLayer.Concrete
@using DataAccessLayer.Concrete;
@using DataAccessLayer.EntityFrameWork;
@using BusinessLayer.Concrete;
@using System.Web.WebPages;
@model List<Movie>
@{
    Context c = new Context();
}
<style>
    .favorite a, .infavorite a {
        color: white;
    }

    .infavorite {
        background-color: #ee171f;
    }

    a {
        color: white;
    }

        a :hover {
            color: white;
        }
</style>
@foreach (var x in Model)
{
<div class="mediaitem">
    <img src="@x.Image" class="mediaimg" alt="@x.Name">
    <div class="hd">
        <a href="/Universe/DetailsMovie/@x.ID" class="movielink">
            <h2 class="mediah">@x.Name</h2>
        </a>
        <p class="medidesc">
            @x.Description.ToString()
        </p>
    </div>
    <div class="about">
        <h3>@x.Producer</h3>
        <div class="ictxt">
            <i class="fas fa-calendar-alt"></i>
            <h4>@(((DateTime)x.ReleaseDate).ToString("dd MMMM yyyy"))</h4>
        </div>
        <div class="ictxt">
            <i class="fab fa-imdb"></i>
            <h4>@x.IMDB</h4>
        </div>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        if (c.Users.FirstOrDefault(y => y.UserName == User.Identity.Name) != null)
        {
            try
            {
                FavoriteManager favorite = new FavoriteManager(new EfFavoritesDal());
                var usersfavorites = favorite.GetList();
                int userid = (int)Session["UserID"];
                usersfavorites = usersfavorites.FindAll(y => y.UserID == userid);
                if (usersfavorites.Any(y => y.MovieID == x.ID))
                {
                    <div class="button">
                        @*<button class="watch"><i class="fas fa-plus"></i>İzləmə siyahısına artır</button>*@
                        <a href="/Universe/DeleteFavorite/@x.ID"><button class="infavorite"><i class="fas fa-heart"></i>Sevimli</button></a>
                    </div>
                }
                else
                {
                    <div class="button">
                        @*<button class="watch"><i class="fas fa-plus"></i>İzləmə siyahısına artır</button>*@
                        <a href="/Universe/AddFavorite/@x.ID"><button class="favorite"><i class="far fa-heart"></i>Sevimlilərə artır</button></a>
                    </div>
                }
            }
            catch (Exception)
            {

            }

        }

    }
</div>
}
