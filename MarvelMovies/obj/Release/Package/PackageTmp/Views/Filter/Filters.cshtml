@using (Html.BeginForm("FilterResults", "Filter", FormMethod.Post))
{
    <div id="filters">
        <div id="sort">
            <h3>Sıralama:</h3>
            <div class="table">
                <input type="radio" class="tabledata" name="sortby" value="Date" id="ByDate" checked>
                <label for="ByDate" class="tabledata">Çıxış tarixi</label>
                <input type="radio" class="tabledata" name="sortby" value="Alphabet" id="ByAlphabet">
                <label for="ByAlphabet" class="tabledata">Əlifba sırası</label>
                <input type="radio" class="tabledata" name="sortby" value="Score" id="ByScore">
                <label for="ByScore" class="tabledata">IMDB xalı</label>
                <input type="radio" class="tabledata" name="sortby" value="Time" id="ByTime">
                <label for="ByTime" class="tabledata">Müddəti</label>
            </div>
            <div class="table">
                <input type="radio" class="tabledata" name="quantity" value="increase" id="Increase" checked>
                <label for="Increase" class="tabledata">Artan</label>
                <input type="radio" class="tabledata" name="quantity" value="decrase" id="Decrease">
                <label for="Decrease" class="tabledata">Azalan</label>
            </div>
        </div>
        <div id="universe">
            <h3>Dünya:</h3>
            <div class="table">
                <input type="checkbox" class="tabledata" name="universe" value="Marvel" id="Marveluniverse">
                <label for="Marveluniverse" class="tabledata">Marvel</label>
                <input type="checkbox" class="tabledata" name="universe" value="Sony" id="Sonyuniverse">
                <label for="Sonyuniverse" class="tabledata">Sony</label>
                <input type="checkbox" class="tabledata" name="universe" value="X-Men" id="XMenuniverse">
                <label for="XMenuniverse" class="tabledata">X-Men</label>
                <input type="checkbox" class="tabledata" name="universe" value="Other" id="Otheruniverse">
                <label for="Otheruniverse" class="tabledata">Digər</label>
            </div>
        </div>
