        <div class="ranges" id="imdb">
            <h3>IMDB aralığı:</h3>
            <input id="imdb1range" type="range" name="imdb1" min="0" max="9" value="0" step="0.1">
            <input id="imdb2range" type="range" name="imdb2" min="1" max="10" value="10" step="0.1">
            <p class="rangetxt">
                <span id="imdb1value">1</span>&nbsp;ilə&nbsp;<span id="imdb2value">7</span>&nbsp;arası
            </p>
        </div>
        <div class="ranges" id="date">
            <h3>Tarix aralığı:</h3>
            <input id="date1range" type="range" name="date1" min="1998" max="2021" value="1998">
            <input id="date2range" type="range" name="date2" min="1999" max="2022" value="2022">
            <p class="rangetxt">
                <span id="date1value">1</span>&nbsp;ilə&nbsp;<span id="date2value">7</span>&nbsp;arası
            </p>
        </div>
        <div id="buttons">
            <button class="successbtn">Axtar</button>
        </div>
    </div>
}


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(function () {
        $("#filter").click(function () {
            $("#filters").slideToggle(500);
            $("#filters").css({
                "display": "flex",
                "flex- direction": "row",
                "justify-content": "space-between"
            });
        });
        $('#imdb1value').html($('#imdb1range').val());
        $('#imdb2value').html($('#imdb2range').val());
        $('#date1value').html($('#date1range').val());
        var thisyear = new Date().getFullYear();
        $('#date2range').attr("max", (parseInt(thisyear - 1)));
        $('#date2range').attr("max", thisyear);
        $('#date2range').val(thisyear);
        $('#date2value').html($('#date2range').val());

        $(document).on('input', '#imdb1range', function () {
            $('#imdb1value').html($(this).val());
            var min = (parseInt($('#imdb1range').val()) + 1);
            $('#imdb2range').attr("min", (parseInt($(this).val()) + 1));
        });
        $(document).on('input', '#imdb2range', function () {
            $('#imdb2value').html($(this).val());
            $('#imdb1range').attr("max", (parseInt($(this).val()) - 1));
        });
        $(document).on('input', '#date1range', function () {
            $('#date1value').html($(this).val());
            $('#date2range').attr("min", (parseInt($(this).val()) + 1));
        });
        $(document).on('input', '#date2range', function () {
            $('#date2value').html($(this).val());
            $('#date1range').attr("max", (parseInt($(this).val()) - 1));
        });
    });
</script>
