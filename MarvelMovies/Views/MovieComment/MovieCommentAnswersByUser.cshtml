@using EntityLayer.Concrete
@model List<MovieCommentAnswer>
@foreach (var x in Model)
{
    <div class="comment">
        <img src="@x.MovieComment.Movie.Image" alt="@x.MovieComment.Movie.Name" class="MovieImg">
        <div class="MovieNameComTxt">
            <h3>@x.MovieComment.Movie.Name</h3>
            @if (x.AnswerText.Length > 320)
            {
                <p>@x.AnswerText.Substring(0, 320)...</p>
            }
            else
            {
                <p>@x.AnswerText</p>
            }
        </div>
        <div class="date">
            <h4>@(((DateTime)x.AnswerDate).ToString("dd.MM.yyyy"))</h4>
            @*<div class="likedislike">
                <div class="like">
                    <i class="far fa-thumbs-up"></i> @x.Like
                </div>
                <div class="dislike">
                    <i class="far fa-thumbs-down"></i> @x.DisLike
                </div>

            </div>*@
        </div>
        <div class="detdel">
            <button class="det">Tam bax</button>
            <button class="del">Sil</button>
        </div>
    </div>
}