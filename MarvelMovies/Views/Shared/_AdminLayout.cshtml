
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="az">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CADEB Movies</title>
    <link rel="icon"
          type="image/png"
          href="~/Logo.png">
    <link href="~/web-MarvelKopat/web-marvel-movies 2 admin/CSS/StyleSheet.css" rel="stylesheet" />
    <link href="~/web-MarvelKopat/web-marvel-movies 2 admin/CSS/FormFW.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
          integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
</head>


<body id="body">
    <div id="container">
        <div>
            <div id="sidebar">
                <div>
                    <div id="menuhead">MENYU</div>
                    @if (User.IsInRole("Main"))
                    {
                        <a href="/Statistics/Statistics"><div class="menuitem" id="statisticsp">Statistika</div></a>
                    }

                    <a><div class="headermenuitem" id="filmsbtn">Hamısı <i class="linklistbtn fas fa-chevron-down"></i></div></a>
                    <div class="linklist" id="films">
                        <a href="/Movie/MoviesList"><div class="menuitem" id="moviep">Filmlər</div></a>
                        <a href="/Serie/SeriesList"><div class="menuitem" id="seriep">Seriallar</div></a>
                    </div>

                    <a><div class="headermenuitem" id="commentsbtn">Rəylər <i class="linklistbtn fas fa-chevron-down"></i></div></a>
                    <div class="linklist" id="comments">
                        <a href="/MovieComment/MovieCommentsList"><div class="menuitem" id="moviecomp">Film Rəyləri</div></a>
                        <a href="/SerieComment/SerieCommentsList"><div class="menuitem" id="seriecomp">Serial Rəyləri</div></a>
                    </div>

                    <a href="/User/UserList"><div class="menuitem" id="userp">İstifadəçilər</div></a>
                    <a href="/Contact/MessagesList"><div class="menuitem" id="contactp">Mesajlar</div></a>
                    <a href="/Universe/MarvelUniverse"><div id="websitelink">Web Sayt</div></a>
                    <a href="/Login/AdminLogin"><div id="logoutlink">Çıxış</div></a>
                </div>
            </div>
        </div>

        <div id="content">
            <div>
                <div id="header">
                    <div id="logotxt">
                        <img id="logo" src="~/Logo.png" alt="Logo">
                        <h2>CADEB Movies Admin Panel</h2>
                    </div>
                    <!--
                        <div id="search">
                        <p id="searchtext">Axtarış:</p>
                        <div id="searchinpt" class="col-3 input-effect">
                            <input class="effect-16 form-item" type="text">
                            <span class="focus-border"></span>
                        </div>
                    </div>
                    -->
                </div>
                <div id="article">

                    @RenderBody()

                </div>
            </div>
        </div>
        @*<a href="index.html"><button id="up"><i class="fas fa-chevron-up"></i></button></a>*@
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(function () {
            $("#filmsbtn").click(function () {
                $("#films").slideToggle(500);
                if ($("#filmsbtn > a > i").hasClass("rotate-180")) {
                    $("#filmsbtn > a > i").removeClass("rotate-180");
                    $("#filmsbtn > a > i").toggleClass("rotate--180");
                }
                else {
                    $("#filmsbtn > a > i").removeClass("rotate--180");
                    $("#filmsbtn > a > i").toggleClass("rotate-180");
                }
            });
            $("#commentsbtn").click(function () {
                $("#comments").slideToggle(500);
                if ($("#commentsbtn > a > i").hasClass("rotate-180")) {
                    $("#commentsbtn > a > i").removeClass("rotate-180");
                    $("#commentsbtn > a > i").toggleClass("rotate--180");
                }
                else {
                    $("#commentsbtn > a > i").removeClass("rotate--180");
                    $("#commentsbtn > a > i").toggleClass("rotate-180");
                }
            });
            $(".activemenuitem").click(function () {
                $(this).addClass("menuitem");
                $(this).removeClass("activemenuitem");
            });
            $(scroll).scroll(function () {
                var t = $("#sidebar").offset().top;
                if (t >= "220") {
                    $("#up").fadeIn(300);
                }
                else {
                    $("#up").fadeOut(300);
                }
            });
        });
    </script>
</body>

</html>
